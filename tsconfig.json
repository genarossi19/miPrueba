{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src", // Establece la base de las rutas en 'src'
    "paths": {
      "@components/*": ["components/*"] // Alias para la carpeta components
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
, "src/app/index.jsx"  ]
}
